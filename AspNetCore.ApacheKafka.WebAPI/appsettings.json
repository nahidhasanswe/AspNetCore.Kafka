{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "Producer": {
      "ClientId": "aspnet-producer"
    },
    "Consumers": [
      {
        "GroupId": "orders-service",
        "Topic": "orders",
        "AutoOffsetReset": "Earliest"
      },
      {
        "GroupId": "payments-service",
        "Topic": "payments",
        "AutoOffsetReset": "Earliest"
      }
    ]
  }
}
